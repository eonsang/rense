{#                    </div>#}

{#                    <div class="custom-control custom-checkbox mr-2">#}
{#                        <input type="checkbox" class="custom-control-input" id="receive_sms" name="receive_sms" {% if object.receive_sms %} checked {% endif %} >#}
{#                        <label class="custom-control-label" for="receive_sms">SMS</label>#}
{#                    </div>#}

{#                    <div class="custom-control custom-checkbox">#}
{#                        <input type="checkbox" class="custom-control-input" id="receive_talk" name="receive_talk" {% if object.receive_talk %} checked {% endif %} >#}
{#                        <label class="custom-control-label" for="receive_talk">카카오</label>#}
{#                    </div>#}
{#                </div>#}
                <div class="board__btnbox">
                    <button type="submit" class="button">
                        {% if object.id %} 수정
                        {% else %} 등록
                        {% endif %}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
    {% include 'layout/footer.njk' %}

{% endblock %}


